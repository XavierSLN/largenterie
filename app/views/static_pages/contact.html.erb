<section class="container-fluid" id="contact">
  
  <div class="header">
    <h1>Pour nous contacter:</h1>
  </div>

  <div class="row">

    <div class="col-lg-4 col-md-4 column-left">
      <div class="column">
          <h3>Vous pouvez nous appeler au:</h3>
          <p><span class="glyphicon glyphicon-phone"></span> : +33.6.00.00.00.00</p>
          <h3>ou nous envoyer un email:</h3>
          <p><span class="glyphicon glyphicon-envelope"></span> : xav.sln@gmail.com</p>
          <p>
            <div id="map"></div>
                <!--
                <iframe width="100%" height="250" frameborder="0" style="border:0" src="https://www.google.com/maps/embed/v1/view?zoom=12&center=48.6348%2C-2.1080&key=AIzaSyAieQj0ZbWWKz4K_7bb_2Si8G6Um5vuJxk" allowfullscreen></iframe>
                -->
          </p>
      </div><!-- end column -->
    </div>
    <div class="col-lg-8 col-md-8">
      <div class="column">
        <form>
        <div class="form-group">
          <div class="form-contact">
            <h3>Pour nous envoyer un email, utilisez le formulaire ci-dessous:</h3>
            <div class="row">
              <div class="col-lg-6">
              <label for="name">Nom*</label>
              <input type=”text” id="name" required=""required" class="form-control" placeholder="Enter name">
              </div>

              <div class="col-lg-6">
              <label for="phone">Numéro de téléphone</label>
              <input type="text" id="phone" class="input-medium bfh-phone form-control" data-country="US" placeholder="Enter phone number">
              </div>
            </div>

            <label for="email">Adresse email*</label>
            <input type="email" id="email" required="required" class="form-control" placeholder="Enter email">
                                
            <label for="message">Votre message*</label>
            <textarea  minlength=25 placeholder="Enter message" style="resize:none"  id="message" required="required" class="message-box form-control"></textarea>
            <p id="visible-comment"></p>
            <p id="char-count"></p>
            <button type="submit" class="btn btn-default submit-btn" id="button">Submit</button>
          </div>
        </div>
      </form>

      </div><!-- end column -->
    </div>

  </div>
    
</section> <!-- end container contact section -->
